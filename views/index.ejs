<% include ./partials/header.ejs%>
<div class="ui main text container">
    <div class="ui huge header">RESTful application</div>
    <div class="ui top attached segment">
<div class="ui divided items">
<% for(var i=0;i<blogs.length;i++){ %>  
  <div class="item">
    <div class="ui small image">
    <img src="<%=blogs[i].image%>">      
    </div>
    <div class="content">
      <div class="header"><%=blogs[i].title%></div>
      <div class="meta">
        <span class="date"><%=blogs[i].created.toDateString()%></span>
      </div>
      <div class="description">
        <p>
        <%=blogs[i].body.substring(0,100)%>..         
        </p>
      </div>
           <div class="extra">
             <a class="ui button inverted violet" href="/blogs/show/<%=blogs[i]._id%>">Read More<i class="right chevron icon"></i></a>
        
      </div>
    </div>
  </div>



<% } %>        
</div>
    </div>
    </div>
