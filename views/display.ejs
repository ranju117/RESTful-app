<% include ./partials/header.ejs%>
<div class="ui main text container segment">
    <h4><%=blog.title%></h4>
    <img src="<%=blog.image%>">
    <p><%=blog.created.toDateString()%></p>
    <p><%-blog.body%></p>
    <form method="POST" action="/blogs/<%=blog._id%>?_method=DELETE" "display:inline-block">
    <button class="ui inverted red button">Delete</button>
    </form>
    <form method="GET" action="/blogs/<%=blog._id%>/edit" style="display:inline-block">
    <button class="ui inverted orange button">Edit</button>
    </form>
</div>
<% include ./partials/footer.ejs%>